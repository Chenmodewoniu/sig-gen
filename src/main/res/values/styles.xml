<resources>

  <!--
      Base application theme, dependent on API level. This theme is
      replaced by AppBaseTheme from res/values-vXX/styles.xml on newer
      devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Light">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="back">@drawable/ic_action_back</item>
    <item name="forward">@drawable/ic_action_forward</item>
    <item name="previous">@drawable/ic_action_previous_item</item>
    <item name="next">@drawable/ic_action_next_item</item>

  </style>

  <style name="AppDarkBaseTheme" parent="android:Theme">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <!-- Application theme. -->
  <style name="AppDarkTheme" parent="AppDarkBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="back">@drawable/ic_action_back_dark</item>
    <item name="forward">@drawable/ic_action_forward_dark</item>
    <item name="previous">@drawable/ic_action_previous_item_dark</item>
    <item name="next">@drawable/ic_action_next_item_dark</item>

  </style>

</resources>
